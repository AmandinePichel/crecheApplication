<UserControl x:Class="CrecheApplication.View.AddKidsInfos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CrecheApplication.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Helvetica"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                BorderThickness="2"
                                BorderBrush="White">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Opacity" Value="0.4"/>
                    <Setter Property="Foreground" Value="DeepSkyBlue"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="235"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Right"
                                Foreground="Red"
                                FontWeight="Bold"
                                Margin="5" 
                                FontSize="6pt"
                                FontStyle="italic"
                                Text="{Binding ElementName=LabelErrorMessage, 
                                                Path=AdornedElement.(Validation.Errors)[0].ErrorContent}">
                            </TextBlock>
                            <AdornedElementPlaceholder Name="LabelErrorMessage" />
                        </DockPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Helvetica"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="Width" Value="150"/>
        </Style>

        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Helvetica"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Opacity" Value="0.7"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="395"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <Image x:Name="image1" Source="{Binding Picture}" Width="80"/>
                    <TextBlock TextAlignment="Center"
                               FontSize="14"
                               FontWeight="Light"
                               FontFamily="helvetica">
                    <Hyperlink Foreground="White"
                               TextDecorations="none"
                               FontFamily="Helvetica"
                               Command="{Binding AddPicture}">
                        Ajouter une photo
                    </Hyperlink>
                    </TextBlock>
                </StackPanel>

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0"
                        Name="LabelName"
                        Content="Nom"
                        Foreground="White"
                        Grid.RowSpan="2"></Label>
                    <TextBox Grid.Row="0"
                            Text ="{Binding validation.NameEntry, 
                                             UpdateSourceTrigger=PropertyChanged,
                                             ValidatesOnDataErrors=true}" 
                            Name="textBoxName"
                            PreviewMouseLeftButtonDown="TextBoxNameClick"
                            Grid.RowSpan="2"/>
                    <Border Grid.Row="1" 
                            Width="250"
                            Height="2"
                            Background="White"
                            Opacity="0.5"/>
                </Grid>

                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0"
                        Name="LabelFirstname"
                        Content="Prénom"
                        Foreground="White"
                        Grid.RowSpan="2"></Label>
                    <TextBox Grid.Row="0"
                            Text ="{Binding Path=validation.FirstnameEntry,
                                             UpdateSourceTrigger=PropertyChanged,
                                             ValidatesOnDataErrors=True}" 
                            Name="textBoxFirstname"
                            PreviewMouseLeftButtonDown="TextBoxFirstnameClick" 
                            Grid.RowSpan="2"/>
                    <Border Grid.Row="1" 
                            Width="250"
                            Height="2"
                            Background="White"
                            Opacity="0.5"/>
                </Grid>

                <Grid Grid.Row="5">
                    <StackPanel Margin="0,10,0,0">
                        <Label Width="250"
                               FontSize="14"
                               FontWeight="Light"
                               FontFamily="helvetica"
                               Opacity="1">Veuillez sélectionner le parent</Label>
                        <ComboBox Grid.Row="3" 
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"   
                                  Width="120"
                                  ItemsSource="{Binding Path=ParentsCombobox}"
                                  SelectedItem="{Binding Path=validation.SelectedParent,
                                                     UpdateSourceTrigger=PropertyChanged,
                                                     ValidatesOnDataErrors=True}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} {1}">
                                                <Binding Path="Firstname"/>
                                                <Binding Path="Name"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="1">
                    <Label Content="Date de naissance"
                       FontSize="14"
                       FontWeight="Light"
                       FontFamily="helvetica"
                       Opacity="1"
                       Margin="0,0,30,0"/>
                    <DatePicker 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        SelectedDate="{Binding SelectedDate}"/>
                </StackPanel>

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0"
                    Name="LabelAddress"
                    Content="Lieu de résidence"
                    FontSize="18"
                    Foreground="White"
                    Grid.RowSpan="2"></Label>
                    <Viewbox StretchDirection="DownOnly">
                        <TextBox Grid.Row="0"
                                 FontSize="15"
                        Text ="{Binding Path=validation.AddressEntry,
                                         UpdateSourceTrigger=PropertyChanged,
                                         ValidatesOnDataErrors=True}" 
                        Name="textBoxAddress"
                        PreviewMouseLeftButtonDown="TextBoxAddressClick" 
                        Grid.RowSpan="2"/>

                    </Viewbox>
                    <Border Grid.Row="1" 
                        Width="250"
                        Height="2"
                        Background="White"
                        Opacity="0.5"/>
                </Grid>

                <StackPanel Grid.Row="3" Margin="0,20,0,0">
                    <Label Content="Allergies"
                       FontSize="14"
                       FontWeight="Light"
                       FontFamily="helvetica"
                       Opacity="1"/>
                    <ListBox x:Name="ListBox" ItemsSource="{Binding FoodCheckBox}" SelectionMode="Multiple" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True"
                                           Orientation="Vertical"
                                           HorizontalAlignment="Center" 
                                           Height="100"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="-7">
                                    <CheckBox IsChecked="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}, Path=IsSelected}">
                                        <TextBlock Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </CheckBox>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <Button Grid.Row="4" 
                    Width="100" 
                    Height="40" 
                    Content="INSCRIPTION" 
                    Cursor="Hand"
                    CommandParameter="{Binding SelectedItems, ElementName=ListBox}"
                    Command="{Binding AddChild}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
